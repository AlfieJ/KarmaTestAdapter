@echo off
setlocal
cd /d %~dp0

echo ===============================================================================================
echo init
echo -----------------------------------------------------------------------------------------------
call init.cmd
echo.

echo ===============================================================================================
echo clean
echo -----------------------------------------------------------------------------------------------
rmdir /s /q output
mkdir output
echo.

echo ===============================================================================================
echo args
echo -----------------------------------------------------------------------------------------------
call node_modules\.bin\karma-vs-reporter args -c karma-vs-reporter.test.json -v output\VsConfig.json
echo.

echo ===============================================================================================
echo get-config
echo -----------------------------------------------------------------------------------------------
call node_modules\.bin\karma-vs-reporter get-config -c karma-vs-reporter.test.json -o output\get-config.json
echo.

echo ===============================================================================================
echo discover
echo -----------------------------------------------------------------------------------------------
call node_modules\.bin\karma-vs-reporter discover -c karma-vs-reporter.test.json -o output\discover.xml
echo.

echo ===============================================================================================
echo run
echo -----------------------------------------------------------------------------------------------
call node_modules\.bin\karma-vs-reporter run -c karma-vs-reporter.test.json -p 53983 -v VsConfig.json -o output\run.xml
echo.

echo ===============================================================================================
echo unknown
echo -----------------------------------------------------------------------------------------------
call node_modules\.bin\karma-vs-reporter unknown -c karma-vs-reporter.test.json -p 53983 -v VsConfig.json -o output\run.xml
echo.

echo ===============================================================================================
echo output files
echo -----------------------------------------------------------------------------------------------
dir /b output
echo.
